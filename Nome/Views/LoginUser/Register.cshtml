@model Nome.Recieve.RegisterCustomer

@{
    ViewBag.Title = "Đăng Ký";
    Layout = null;
}

@if (TempData["AccountExist"] != null)
{
    <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Thông Báo</strong>
            <small>mới</small>
            <button type="button" class="btn-close ms-1 mb-1" data-bs-dismiss="toast" aria-label="Close">
                <span aria-hidden="true"></span>
            </button>
        </div>
        <div class="toast-body">
            @TempData["AccountExist"]
        </div>
    </div>
}
@if (TempData["LoginSuccess"] != null)
{
    <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Thông Báo</strong>
            <small>mới</small>
            <button type="button" class="btn-close ms-1 mb-1" data-bs-dismiss="toast" aria-label="Close">
                <span aria-hidden="true"></span>
            </button>
        </div>
        <div class="toast-body">
            @TempData["LoginSuccess"]
        </div>
    </div>
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-7">
    <meta name="viewport" content="width=device-width, initial-scale=2.0">
    <title>Trang đăng ký</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@6.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Theme/login.css">

</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 register-form">
                <h2 class="text-center mb-4">Đăng ký</h2>
                <div asp-validation-summary="All"></div>
                <form asp-action="Register" method="post">
                    <div class="form-group">
                        <label for="hoTen">Họ và tên:</label>
                        <input asp-for=HoTenKh type="text" class="form-control" id="hoTen" placeholder="Nhập họ và tên" />
                    </div>
                    <div class="form-group">
                        <label for="ngaySinh">Ngày sinh:</label>
                        <input asp-for=NgaySinh type="date" class="form-control" id="ngaySinh" name="ngaySinh">
                    </div>
                    <div class="form-group">
                        <label for="diaChi">Địa chỉ:</label>
                        <input asp-for=DiaChi type="text" class="form-control" id="diaChi" name="diaChi" placeholder="Nhập địa chỉ">
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input asp-for=Email type="email" class="form-control" id="email" placeholder="Nhập email">
                    </div>
                    <div class="form-group">
                        <label for="std">Số điện thoại:</label>
                        <input asp-for=Std type="number" class="form-control" id="std" name="std" placeholder="Nhập số điện thoại">
                    </div>
                    <div class="form-group">
                        <label for="matKhau">Mật khẩu:</label>
                        <input asp-for=MatKhau type="password" class="form-control" id="matKhau" name="matKhau" placeholder="Nhập mật khẩu">
                    </div>
                    <div class="form-group">
                        <label for="xacNhanMatKhau">Xác nhận mật khẩu:</label>
                        <input type="password" class="form-control" id="xacNhanMatKhau" name="xacNhanMatKhau" placeholder="Nhập lại mật khẩu">
                    </div>
                    <button type="submit" class="btn btn-primary">Đăng ký</button>
                </form>
                <p class="mt-3 text-center">Bạn đã có tài khoản? <a asp-action="Login">Đăng nhập</a></p>
            </div>
        </div>
    </div>
    @if (TempData["LoginSuccess"] != null)
    {
        <div class="alert alert-success">
            @TempData["LoginSuccess"]
        </div>
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>

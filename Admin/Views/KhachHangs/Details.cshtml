        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
        <dt class="col-sm-2">
            Loại Khách Hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LoaiKh)
        </dd>
        <dt class="col-sm-2">
            Đơn Hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdDonHangNavigation.IdDonHang)
        </dd>
        <dt class="col-sm-2">
            Giỏ Hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdGioHangNavigation.IdGioHang)

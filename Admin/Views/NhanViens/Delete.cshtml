@model Admin.Models.NhanVien

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa nhân viên này?</h3>
<div>
    <h4>Thông tin nhân viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Họ và Tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTenNv)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Số Điện Thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sdt)
        </dd>
        <dt class="col-sm-2">
            Địa Chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt class="col-sm-2">
            Mật Khẩu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
        <dt class="col-sm-2">
            Báo Cáo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdBaoCaoNavigation.IdBaoCao)
        </dd>
        <dt class="col-sm-2">
            Chức Vụ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdChucVuNavigation.IdChucVu)
        </dd>
        <dt class="col-sm-2">
            Phiếu Nhập Hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPnhNavigation.IdPnh)
        </dd>
        <dt class="col-sm-2">
            Phiếu Xuất Hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPxhNavigation.IdPxh)
        </dd>
        <dt class="col-sm-2">
            Thông Báo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdThongBaoNavigation.IdThongBao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdNv" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>

